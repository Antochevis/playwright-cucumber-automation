{
  "env": {
    "node": true,
    "es2021": true,
    "jest": false
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "prefer-const": "warn",
    "eqeqeq": ["warn", "always"],
    "no-var": "error",
    "prefer-arrow-callback": "warn",
    "arrow-body-style": ["warn", "as-needed"]
  },
  "ignorePatterns": [
    "node_modules/",
    "reports/",
    "dist/",
    "build/",
    ".env"
  ]
}
